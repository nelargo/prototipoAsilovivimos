<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/home_bg" >

    <!-- Header  Starts -->


    <!-- Header Ends -->
    <!-- Footer Start -->

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="130dip"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <!-- Link to Registration Screen -->
        
        <Button
            android:id="@+id/buttonUpload"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/anim_btn_upload" />

        <TextView
            android:id="@+id/txt_home_subir"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="SUBIR"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
    <!-- Footer Ends -->


    <!-- Body Form -->

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:padding="10dip" >
    </RelativeLayout>
    <!-- Body Form Ends -->

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/VideoListPrev"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_question" />

        <TextView
            android:id="@+id/txt_home_p1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:text="Hola, dinos de dónde es tu video..."
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:typeface="normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_alignRight="@+id/linearLayout1"
        android:layout_below="@+id/linearLayout1"
        android:gravity="center" >

        <ToggleButton
            android:id="@+id/ToggleButton06"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/anim_btn_casa"
            android:clickable="true"
            android:checked="false"
            android:textOff=" "
            android:textOn=" " />

        <ToggleButton
            android:id="@+id/ToggleButton05"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/anim_btn_cancha"
            android:clickable="true"
            android:checked="false"
            android:textOff=" "
            android:textOn=" " />

        <ToggleButton
            android:id="@+id/ToggleButton04"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/anim_btn_bar"
            android:clickable="true"
            android:checked="false"
            android:textOff=" "
            android:textOn=" " />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_alignRight="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="20dp"
        android:gravity="center" >

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="-70dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_question" />

        <TextView
            android:id="@+id/txt_home_p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:paddingLeft="7dp"
            android:text="¿Es GOL?"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout3"
        android:layout_alignRight="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginTop="7dp"
        android:gravity="center" >

        <ToggleButton
            android:id="@+id/ToggleButton02"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/anim_btn_globo"
            android:checked="false"
            android:clickable="true"
            android:paddingLeft="7dp"
            android:text="SI"
            android:textOff="SI"
            android:textOn="SI"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ToggleButton
            android:id="@+id/ToggleButton01"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/anim_btn_globo"
            android:checked="false"
            android:clickable="true"
            android:paddingLeft="7dp"
            android:text="NO"
            android:textOff="NO"
            android:textOn="NO"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout4"
        android:layout_alignRight="@+id/linearLayout4"
        android:layout_below="@+id/linearLayout4"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical" >

        <ToggleButton
            android:id="@+id/ToggleButton03"
            android:layout_width="156dp"
            android:layout_height="48dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/anim_btn_globo"
            android:checked="false"
            android:clickable="true"
            android:paddingLeft="15dp"
            android:text="UUUUUU"
            android:textOff="UUUUUU"
            android:textOn="UUUUUU"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>