<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/cocacola" >

    <!-- Header  Starts -->


    <!-- Header Ends -->
    <!-- Footer Start -->

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="130dip"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <!-- Link to Registration Screen -->

        <TextView
            android:id="@+id/link_to_register"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="#99FF0000"
            android:gravity="center"
            android:text="ENTRAR"
            android:textColor="#FFFFFF"
            android:textSize="20dip"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonEntrarSala"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/anim_btn_upload" />
    </LinearLayout>
    <!-- Footer Ends -->


    <!-- Body Form -->
    <!-- Body Form Ends -->

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="10dip" >

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/VideoListPrev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:src="@drawable/logo_chat_chat" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@drawable/txt_eligetusala" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="40dp"
        android:gravity="center" >

        <ToggleButton
            android:id="@+id/tbChatFacebook"
            android:layout_width="68dp"
            android:layout_height="64dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/anim_btn_facebook"
            android:checked="false"
            android:text="ToggleButton"
            android:textOff=" "
            android:textOn=" " />

        <ToggleButton
            android:id="@+id/tbChatGoogle"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/anim_btn_google"
            android:checked="false"
            android:text="ToggleButton"
            android:textOff=" "
            android:textOn=" " />

        <ToggleButton
            android:id="@+id/tbChatTwitter"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/anim_btn_twitter"
            android:checked="false"
            android:text="ToggleButton"
            android:textOff=" "
            android:textOn=" " />

    </LinearLayout>

</RelativeLayout>
